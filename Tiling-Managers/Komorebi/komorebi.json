{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.36/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/apps.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 6,
  "default_container_padding": 8,
  "mouse_follows_focus": false,
  "border": true,
  "border_implementation": "Windows",
  "border_style": "System",
  "border_width": 0,
  "border_offset": 0,
  "border_colours": {
    "single": "#d9d9d9",
    "floating":"#d0e9f6",
    "unfocused": "#525252"
  },
  "stackbar": {
    "mode": "Never"
  },
  "animation": {
    "enabled": true,
    "fps": 144,
    "duration": 225, 
    "style": {
        "movement": "EaseInOutExpo"
    }
  },
  "floating_applications": [
    {
      "kind": "Exe",
      "id": "BCUninstaller.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "ApplicationFrameHost.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "Photos.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "SmoothScrollGUI",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Notepad",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "App Installer",
      "matching_strategy": "Equals"
    },
    {
        "kind": "Title",
        "id": "Settings",
        "matching_strategy": "Equals"
		},
    {
      "kind": "Exe",
      "id": "WindowsTerminal.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "explorer.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "SnippingTool.exe",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "Browsers",
          "layout": "BSP",
          "initial_workspace_rules":[
            {
              "kind": "Exe",
              "id": "zen.exe",
              "matching_strategy": "Equals"
            },
            {
              "kind": "Exe",
              "id": "chrome.exe",
              "matching_strategy": "Equals"
            },
            {
              "kind": "Exe",
              "id": "arc.exe",
              "matching_strategy": "Equals"
            },
            {
              "kind": "Exe",
              "id": "vivaldi.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "Code",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Code.exe",
              "matching_strategy": "Equals"
            },
            {
              "kind": "Exe",
              "id": "devenv.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "Messages & Apps",
          "layout": "BSP",
          "workspace_rules": [
            {
              "kind":"Exe",
              "id": "Telegram.exe",
              "matching_strategy": "Equals"
            },
            {
              "kind": "Exe",
              "id": "WhatsApp.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "Editing Tools",
          "layout": "BSP"
        },
        {
          "name": "Games",
          "layout": "BSP"
        },
        {
          "name": "Songs",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "Spotify.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "Package Manager",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "UniGetUI.exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "Recording Tools",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "kind": "Exe",
              "id": "obs64.exe",
              "matching_strategy": "Equals"
            }
          ]
        }
      ]
    }
  ]
}
